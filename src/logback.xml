<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>D:%d{HH:mm:ss.SSS} T:[%thread] U:%X{user} L:%-5level S:%logger{5} M:%msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="application" level="INFO"/>
    <logger name="web" level="INFO"/>
    <logger name="service" level="INFO"/>
    <logger name="dao" level="INFO"/>
    <logger name="errors" level="INFO"/>
    <logger name="db" level="INFO"/>
    <logger name="jobs" level="INFO"/>
</configuration>